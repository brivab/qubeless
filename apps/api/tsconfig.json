    "rootDir": "src",
    "incremental": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "composite": true,
    "paths": {
      "bullmq": ["../../node_modules/.pnpm/bullmq@4.18.3/node_modules/bullmq"]
